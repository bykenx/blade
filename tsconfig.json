{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "es",
    "moduleResolution": "node",
    "declaration": true,
    "lib": [
      "ES2017",
      "DOM"
    ],
    "types": ["node"]
  },
  "exclude": [
    "__tests__",
    "node_modules",
    "dist",
    "tests",
    "**/*.spec.ts"
  ]
}