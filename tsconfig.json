{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true
  },
  "exclude": [
    "__tests__",
    "node_modules",
    "dist",
    "tests",
    "**/*.spec.ts"
  ]
}